{
  "name": "dengrow",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @dengrow/web dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:contracts": "pnpm --filter @dengrow/contracts test",
    "test:reports": "turbo run test:reports",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.3",
    "turbo": "^1.11.3"
  }
}
